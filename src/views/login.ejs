<body class="mm-bg-dark">

    <div class="container p-0">
        <div class="contairner-fluid row flex-row m-0">
            <div class="col-lg-3 mm-login-icon m-0">
                <a href="/">
                    <img src="./dist/imgs/png/mercury-logo-transparent.png" alt="" height="100">
                </a>
            </div>
            <div class="col-lg-6 mm-card-dark mm-card-login">
                <form class="mx-auto text-center" id="login-form" method="POST">
                    <h4 class="h4 mb-3">Entrar</h4>
                    <input type="text" name="username" id="username" class="form-control" placeholder="usuario">
                    <br>
                    <input type="password" name="password" id="password" class="form-control" placeholder="senha">
                    <br>
                    <button class="btn mm-btn-yellow-shadowless btn-block mb-3" id="loginButton" type="submit" data-loading-text="<i class='fa fa-circle-o-notch fa-spin'></i>">
                        <strong>Comece a conversar</strong>
                    </button>
                    <a href="/cadastro">
                        <small class="text-white">
                            NÃ£o tem uma conta? Cadastre-se aqui
                        </small>
                    </a>
                </form>
            </div>
        </div>
    </div>

    <script src="./scripts/handle-login.js"></script>
